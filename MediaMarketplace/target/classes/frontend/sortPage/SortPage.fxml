<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="mainPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.sortPage.SortPageController">
   <children>
      <VBox prefHeight="400.0" prefWidth="127.0">
         <children>
            <Label text="Search By" />
            <VBox style="-fx-border-color: #59a6f8;">
               <children>
                  <HBox>
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Name:" />
                        <TextField fx:id="nameField" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Genre:" />
                        <ComboBox fx:id="chooseGenres" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <GridPane fx:id="genresPane">
                          <columnConstraints>
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                        </GridPane>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            <Label text="Sort By:" />
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Ratings" />
                        <TextField fx:id="ratingUp" />
                        <TextField fx:id="ratingDown" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Year" />
                        <TextField fx:id="yearUp" />
                        <TextField fx:id="yearDown" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#searchMovies" text="Search" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <Label prefHeight="67.0" prefWidth="109.0" text="Search Result" />
            <ListView fx:id="movieResultPane" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</HBox>
